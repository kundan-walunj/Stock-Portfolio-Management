@{
}

<h1 class="mt-3">Edit Stock</h1>
@* <p> @ViewBag.Id</p> *@
@if (Model is not null)
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>
        <div class="mt-3">
            <label class="form-label">Symbol</label>
            <input type="text" class="form-control" asp-for="Symbol" />
        </div>
        <div class="mt-3">
          
            <label class="form-label">Quantity</label>
            <input type="text" class="form-control" asp-for="Quantity" />
        </div>
        <div class="mt-3">
            <label class="form-label">BuyPrice</label>
            <input type="text" class="form-control" asp-for="BuyPrice" />
        </div>
        <div class="mt-3">
            <label class="form-label">CurrentPrice</label>
            <input type="text" class="form-control" asp-for="CurrentPrice" />
        </div>
        <div class=" mt-3 d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-danger" asp-controller="ValueUi" asp-action="Delete">Delete</button>
        </div>
    </form>
}
